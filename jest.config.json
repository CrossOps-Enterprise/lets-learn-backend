{
  "testEnvironment": "node",
  "coveragePathIgnorePatterns": ["/node_modules/"],
  "testRegex": "/*.test.js$",
  "collectCoverage": true,
  "coverageThreshold": {
    "global": {
      "branches": 15,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  },
  "moduleDirectories": ["node_modules", "src"]
}
